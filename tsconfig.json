{
  "compilerOptions": {
    "outDir": "./lib/",
    "inlineSourceMap": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "es2020",
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@types/jest"]
  },
  "include": ["./test/**/*.ts", "./src/**/*.ts"]
}
